{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WiFi Monitor",
  "version": "0.1.0",
  "identifier": "com.wifimonitor.dev",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "WiFi Monitor",
        "width": 600,
        "height": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "notification": {
      "all": true
    }
  }
}
